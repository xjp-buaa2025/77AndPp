{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/wishes/([^/]+)",
      "dest": "/api/wishes/$1"
    },
    {
      "src": "/api/wishes",
      "dest": "/api/wishes"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ]
}